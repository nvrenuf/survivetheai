---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import { getBuildFingerprint } from '../utils/buildFingerprint';

const {
  title = 'Survive the AI',
  description = 'Survive the AI â€” Tools, strategies, and content to prepare for the AI disruption.',
} = Astro.props as {
  title?: string;
  description?: string;
};

const analyticsDebug = import.meta.env.PUBLIC_ANALYTICS_DEBUG === 'true';
const fingerprint = getBuildFingerprint();
---

<!DOCTYPE html>
<html lang="en" class="bg-white text-neutral-900">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="build" content={fingerprint.metaContent} />
    <title>{title}</title>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-BQHX35EW09"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-BQHX35EW09');
    </script>
  </head>
  <body class="bg-white text-neutral-900 font-sans antialiased">
    <Navbar />
    <main class="min-h-screen">
      <slot />
    </main>
    <Footer fingerprint={fingerprint} />
    <script is:inline>
      {`
        (function() {
          const debug = ${analyticsDebug ? 'true' : 'false'};
          if (!window.gtag && debug) {
            console.info('[analytics] GA4 not configured. Events will log to console when triggered.');
          }
        })();
      `}
    </script>
  </body>
</html>
